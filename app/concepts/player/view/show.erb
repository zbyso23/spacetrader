<div class="max-w-7xl mx-auto px-4 py-8">
  <%= cell(Player::Cell::PlayerInfo, model) %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <%= cell(Player::Cell::Inventory, model) %>
    <%= cell(Player::Cell::Market, model) %>
  </div>

  <%= cell(Player::Cell::Travel, model) %>

  <%= button_to "Refuel", refuel_player_path(player), 
      method: :post, 
      class: "w-full bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded transition" %>
      
  <%= button_to "Restart", restart_player_path(player), 
      method: :post, 
      class: "w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition" %>


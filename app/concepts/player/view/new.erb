<h1>New Player</h1>

<%= form_with model: contract.model, url: user_players_path do |f| %>
  <%= f.hidden_field :user_id, value: user_id %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, class: "border p-2 w-full" %>
    <% if contract.errors[:name].any? %>
      <span class="error"><%= contract.errors[:name].join(", ") %></span>
    <% end %>
  </div>

  <%= f.submit "Create Player" %>
<% end %>

<%= link_to "Back", user_players_path(user_id) %>
<h1>New Player</h1>

<%= form_with model: contract.model, url: players_path do |f| %>
  <%= f.hidden_field :user_id, value: user_id %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <% if contract.errors[:name].any? %>
      <span class="error"><%= contract.errors[:name].join(", ") %></span>
    <% end %>
  </div>

  <%= f.submit "Create Player" %>
<% end %>

<%= link_to "Back", players_path(user_id: user_id) %>
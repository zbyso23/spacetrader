<div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg shadow-lg p-6 mb-8">
  <h1 class="text-4xl font-bold mb-4"><%= player.name %></h1>
  <div class="grid grid-cols-4 gap-4">
    <div>
      <p class="text-blue-100 text-sm">Credits</p>
      <p class="text-3xl font-bold"><%= player.credit %></p>
    </div>
    <div>
      <p class="text-blue-100 text-sm">Fuel</p>
      <p class="text-3xl font-bold"><%= player.fuel %></p>
    </div>
    <div>
      <p class="text-blue-100 text-sm">Reputation</p>
      <p class="text-3xl font-bold"><%= player.reputation %></p>
    </div>
    <div>
      <p class="text-blue-100 text-sm">Location</p>
      <p class="text-2xl font-bold"><%= planet.name %></p>
      <p class="text-sm"><%= planet.planet_type.capitalize %></p>
    </div>
  </div>
</div>
<div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
  <h3 class="font-bold text-lg mb-2"><%= route.to_planet.name %></h3>
  <p class="text-sm text-gray-600 mb-3"><%= route.to_planet.planet_type.capitalize %></p>
  <div class="space-y-1 text-sm mb-3">
    <div class="flex justify-between">
      <span class="text-gray-600">Fuel:</span>
      <span class="font-medium"><%= route.fuel_cost %></span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-600">Time:</span>
      <span class="font-medium"><%= route.time_cost %>h</span>
    </div>
  </div>
  <% if can_travel? %>
    <%= button_to "Travel", travel_player_path(player, destination_id: route.to_planet.id), 
        method: :post, 
        class: "w-full bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded transition" %>
  <% else %>
    <button disabled class="w-full bg-gray-300 text-gray-500 font-bold py-2 px-4 rounded cursor-not-allowed">
      Not enough fuel
    </button>
  <% end %>
</div>